<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aplikasi Movie"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView"
            android:ems="10"
            android:hint="Title"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText"
            android:ems="10"
            android:hint="Directed by"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText2"
            android:ems="10"
            android:hint="Home Production"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText3"
            android:background="#4CAF50"
            android:text="Genre"
            android:textColor="#F8F8F8"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView2"
            android:text="Thriller" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkBox"
            android:text="Comedy" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkBox2"
            android:text="Horror" />

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView2"
            android:layout_toRightOf="@id/checkBox"
            android:text="Romance" />

        <CheckBox
            android:id="@+id/checkBox5"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkBox4"
            android:layout_toRightOf="@id/checkBox2"
            android:text="Action" />

        <CheckBox
            android:id="@+id/checkBox6"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkBox5"
            android:layout_toRightOf="@id/checkBox3"
            android:text="Fantasy" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkBox6"
            android:background="#4CAF50"
            android:text="Age Restriction"
            android:textColor="#F8F8F8"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:text="under 13th" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/radioButton"
            android:text="13th until 18th" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/radioButton2"
            android:text="18th and above" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/radioButton3"
            android:background="#4CAF50"
            android:text="Country"
            android:textColor="#F8F8F8"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/spinner_country"
            android:spinnerMode="dialog"
            android:layout_below="@id/textView4"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner"
            android:id="@+id/editDate"
            android:hint="Date Release"
            />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editDate"
            android:background="#8BC34A"
            android:text="Proses"
            android:textColor="#FFFFFF" />
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>